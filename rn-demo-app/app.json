{
  "expo": {
    "name": "aws-demo-app",
    "slug": "aws-demo-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "awsdemoapp",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.feyyum.awsdemoapp",
      "infoPlist": {
        "NSBluetoothAlwaysUsageDescription": "This app needs access to Bluetooth for BLE advertising functionality.",
        "NSBluetoothPeripheralUsageDescription": "This app needs access to Bluetooth for BLE advertising functionality."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#FCFCFC"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.feyyum.awsdemoapp",
      "permissions": [
        "android.permission.BLUETOOTH",
        "android.permission.BLUETOOTH_ADMIN",
        "android.permission.BLUETOOTH_ADVERTISE",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#FCFCFC"
        }
      ],
      [
        "expo-font",
        {
          "fonts": [
            "./assets/fonts/InterVariable.ttf",
            "./assets/fonts/InterVariable-Italic.ttf",
            "./assets/fonts/Nunito-VariableFont_wght.ttf",
            "./assets/fonts/Nunito-Italic-VariableFont_wght.ttf"
          ]
        }
      ],
      "expo-web-browser",
      "expo-secure-store",
      "./plugins/ble-advertise"
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
